<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/app_bar_dashboard"
    tools:context=".Activities.Profile"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="5dp"/>

    <ScrollView
        android:padding="5dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="20dp"
                    />

                <TextView
                    android:id="@+id/profile_name"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Rahul Kumawat"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="College ID"
                    android:textSize="20dp"
                    />

                <TextView
                    android:id="@+id/profile_clg_id"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="24714"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Roll No"
                    android:textSize="20dp"
                    />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:id="@+id/profile_rollno"
                    android:layout_height="wrap_content"
                    android:text="16ESKCS130"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Branch"
                    android:textSize="20dp"
                    />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:id="@+id/profile_branch"
                    android:layout_height="wrap_content"
                    android:text="CSE"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Year"
                    android:textSize="20dp"
                    />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:id="@+id/profile_year"
                    android:layout_height="wrap_content"
                    android:text="4-1"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Mobile No"
                    android:textSize="20dp"
                    />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:id="@+id/profile_number"
                    android:layout_height="wrap_content"
                    android:text="8875542682"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="20dp"
                    />

                <TextView
                    android:id="@+id/profile_mail"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="rahul.kumawat2107@gmail.com"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    />
            </LinearLayout>






        </LinearLayout>


    </ScrollView>


</LinearLayout>